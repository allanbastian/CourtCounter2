<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.courtcounter.CourtsActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/c1"
            android:layout_centerHorizontal="true"
            android:text="VIT Hostel lawn"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/c2"
            android:layout_below="@+id/c1"
            android:text="Slim Chance Fitness Studio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/c3"
            android:layout_below="@id/c2"
            android:text="YMCA Health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/c4"
            android:layout_below="@+id/c3"
            android:text="VIT Hostel Indoor Sports Room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/c5"
            android:layout_below="@+id/c4"
            android:text="Royal Shuttle Club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:id="@+id/c6"
            android:layout_below="@+id/c5"
            android:text="Sporty Beans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:layout_below="@+id/c6"
            android:text="VIT Hostel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
